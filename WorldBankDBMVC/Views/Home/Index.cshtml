<link rel="stylesheet" href="~/css/homepage.css" />
@model LoginViewModel 

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
     <h1>Welcome to the <span style="color:red;">ZymBank</span></h1>
     <p>Learn more about the international <a href="#">ZymBank</a></p>
</div>

@using (Html.BeginForm("LoginForm","Home", FormMethod.Post, new { @class = "text-center m-2 p-3 shadow rounded" })) 
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserEmail) <br />
        @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control"}) <br />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password) <br />
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control"}) <br />
    </div>

    <div class="form-group row">
        <div class="col">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
        <div class="col">
            <a style="color:red;" href="#">Forgot Password</a>
        </div>
    </div>

    <br />
    <button class="btn btn-danger" type="submit">Login</button>
    <br />
    <p>Not a member? <a style="color:red;" href="#">Sign Up</a></p>
}